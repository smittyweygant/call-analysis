{
  "_comment": "WhisperX Recorder Default Configuration",
  "_docs": "Copy this file to config.default.json and fill in your values. User overrides go in ~/.config/whisperx/settings.json",
  
  "recording": {
    "output_dir": "~/OBSRecordings",
    "obs_ws_port": "4455",
    "obs_ws_password": "YOUR_OBS_WEBSOCKET_PASSWORD"
  },
  
  "transcription": {
    "diarize": true,
    "language": "en",
    "device": "cpu",
    "compute_type": "float32",
    "whisperx_path": "~/anaconda3/bin/whisperx",
    "hf_token": "YOUR_HUGGINGFACE_TOKEN"
  },
  
  "gdrive": {
    "_comment": "Google Drive integration - uploads analysis to Shared Drive as Google Docs",
    "enabled": false,
    "service_account_file": "YOUR_SERVICE_ACCOUNT_FILE.json",
    "shared_drive_id": "YOUR_SHARED_DRIVE_ID",
    "_docs": "Folders are auto-created per call_type name. Service account needs Content Manager access to Shared Drive."
  },
  
  "openai": {
    "_comment": "LLM provider for analysis. Supports 'openai' or 'databricks'",
